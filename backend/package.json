{
  "name": "shorturl-backend",
  "version": "0.1.0",
  "description": "",
  "author": "dragonman225",
  "license": "MIT",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "start": "rollup -cw",
    "build": "npm run build:module && npm run build:doc",
    "build:module": "rm -rf build && rollup -c && tsc --emitDeclarationOnly",
    "build:doc": "npm run build:dependency-graph",
    "build:dependency-graph": "npx depcruise --exclude '^node_modules' --output-type dot --prefix 'https://github.com/dragonman225-alt/shorturl/tree/master/backend/' src/index.ts | dot -T svg > assets/deps_graph.svg",
    "build:tsviz": "tsviz src/ntable.ts assets/ntable.png",
    "test": "ts-node --skip-project --log-error test/ntable.spec.ts"
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.0",
    "@tsconfig/node14": "^1.0.1",
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "dependency-cruiser": "^10.0.5",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.4.1",
    "rollup": "^2.53.3",
    "tslib": "^2.3.1",
    "tsviz": "1.0.11",
    "typescript": "^4.4.4",
    "zora": "^5.0.0"
  }
}
